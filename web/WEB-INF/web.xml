<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>Controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonaControlador</servlet-name>
        <servlet-class>Controlador.PersonaControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClienteCon</servlet-name>
        <servlet-class>Controlador.ClienteCon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArticuloCon</servlet-name>
        <servlet-class>Controlador.ArticuloCon</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrdenCon</servlet-name>
        <servlet-class>Controlador.OrdenCon</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonaControlador</servlet-name>
        <url-pattern>/PersonaControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClienteCon</servlet-name>
        <url-pattern>/ClienteCon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticuloCon</servlet-name>
        <url-pattern>/ArticuloCon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrdenCon</servlet-name>
        <url-pattern>/OrdenCon</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
